general {
        colors = true
        interval = 1
}


order += "battery all"
order += "volume master"
order += "disk /home"
order += "wireless _first_"
order += "ethernet _first_"
order += "load"
order += "tztime local"

wireless _first_ {
        format_up = "%essid %quality %ip"
        format_down = "WiFi"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "Ethernet"
}

battery all {
        format = "%remaining %percentage %status"
        status_full = "âœ”ï¸"
        status_bat = "ğŸ”‹"
        status_unk = "?"
        status_chr = "âš¡"
        integer_battery_capacity = true
        low_threshold = 20
        threshold_type = "percentage"
}

battery 0 {
        format = "%status %percentage %remaining %emptytime"
        format_down = "No battery"
        status_chr = "âš¡ CHR"
        status_bat = "ğŸ”‹ BAT"
        status_unk = "? UNK"
        status_full = "â˜» FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}


tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

